<div class="content">

  <div class="notice">
    <% if flash[:error] %>
      <p class="error"><%= flash[:error]  %></p>
    <% end %>
  </div>

  <%# extract to a partial? %>
  <%= form_for @user do |f| %>
    <%= f.label :username %>:
    <%= f.text_field :username, autofocus: true, placeholder: "username" %><br />

    <%= f.label :password %>:
    <%= f.password_field :password, placeholder: "password" %><br />

<div class="phone-number">
    <%= f.label :phone_number %>:
    <%= f.telephone_field :phone_number, placeholder: "(xxx)xxx-xxxx" %><br />
</div>
    <%= f.label :email %>:
    <%= f.text_field :email %><br />

    <%= f.submit id: "new_user"%>
  <% end %>


</div>


