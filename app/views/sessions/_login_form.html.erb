
<div class="notice">
  <% if flash[:error] %>
    <p class="error"><%= flash[:error]  %></p>
  <% end %>
</div>

<div class="login_form">
<%= form_for(:session, url: sessions_path) do |f| %>
  Username: <%= f.text_field :username, autofocus: true, placeholder: "username", autofocus: true %><br />
  Password : <%= f.password_field :password, placeholder: "password" %><br />

  <%= f.submit "Log In", :class => "homepage-button" %>
<% end %>
</div>
<br>
or
<div class="signup-button">

<%= link_to "Sign Up", new_user_path, :method => "get", :class => "homepage-button" %></div>